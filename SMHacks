	<script>
			state = "CA";
			city = "San_Mateo";
			tempStr = "0";

			fetch("http://api.wunderground.com/api/430fcd3668a06090/conditions/q/" + state + "/" + city + ".json")
				.then(function (resp) {
					return resp.json()
				})
				.then(function (data) {
					tempStr = data.current_observation.temp_f;
					document.querySelector("#content").innerHTML = tempStr;
					temp = parseFloat(tempStr, 10);
				});
